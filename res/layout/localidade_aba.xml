<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalidadeAbaActivity" 
    android:paddingRight="20dp" 
    android:scrollbars="vertical" >

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:shrinkColumns="3" >

        <TableRow android:paddingTop="8dp" >

            <!-- Matricula -->
            <TextView
                android:id="@+id/matricula"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/matricula"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtMatricula"
                style="@style/editAbaMenor"
                android:layout_marginLeft="10dip"
                android:textColor="#000000" />
        </TableRow>
        
        <TableRow >

            <!-- Municipio -->
            <TextView
                android:id="@+id/municipio"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_municipio"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtMunicipio"
                style="@style/editAbaMenor"
                android:layout_marginLeft="10dip"
                android:textColor="#000000"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <!-- Localidade -->
            <TextView
                android:id="@+id/localidade"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/localidade"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLocalidade"
                style="@style/editAba"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dip" 
                android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <!-- Setor Comercial -->
            <TextView
                android:id="@+id/setorComercial"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setorComercial"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnSetorComercial"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dip" />
            
            <EditText
                android:id="@+id/edtSetorComercial"
                style="@style/editAba"
                android:layout_width="105dp"
                android:inputType="number"
                android:maxLength="3" />
                        
        </TableRow>

        <TableRow>

            <!-- Quadra -->

            <TextView
                android:id="@+id/quadra"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/quadra"
                android:textStyle="bold" />
            
            <Spinner
                android:id="@+id/spnQuadra"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dip" />
            
            <EditText
                android:id="@+id/edtQuadra"
                style="@style/editAba"
                android:layout_width="105dp"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp" >

            <View
                android:id="@+id/linha"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#A8A8A8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <TableRow>

            <!-- Lote -->

            <TextView
                android:id="@+id/lote"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lote"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLote"
                style="@style/editAba"
                android:layout_width="match_parent"
                android:layout_marginLeft="7dip"
                android:inputType="number"
                android:maxLength="4" />
        </TableRow>

        <TableRow>

            <!-- SubLote -->

            <TextView
                android:id="@+id/sublote"
                style="@style/labelAba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sublote"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSublote"
                style="@style/editAba"
                android:layout_width="match_parent"
                android:layout_marginLeft="7dip"
                android:inputType="number"
                android:maxLength="3" />
        </TableRow>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="30dp" 
            android:layout_marginBottom="170dp" >

            <View
                android:id="@+id/linha2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#A8A8A8"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>
    </TableLayout>

</ScrollView>