<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundcompleto">

    <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:orientation="horizontal" 
        android:background="@drawable/imovel_bg" 
        android:minHeight="50dp" 
        android:paddingTop="7dp">

        <Spinner 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3" 
            android:layout_marginLeft="5dp" 
            android:id="@+id/spinnerTiposDeBusca"   
   			android:layout_gravity="center_horizontal" 
   			android:gravity="center"/>
   		
   		<EditText 
   		    android:layout_width="120dp" 
   		    android:layout_height="wrap_content"
   		    android:layout_weight="0.5" 
   		    android:id="@+id/editTextParametroInformado" 
   		    android:layout_gravity="center_vertical" 
   		    android:inputType="text|textVisiblePassword"
   			android:gravity="center" 
   			android:paddingTop="4dp" 
   			android:paddingLeft="10dp"/>
   		
   		<ImageButton
   		    android:layout_width="wrap_content"
   		    android:layout_height="43dp"
   		    android:background="@drawable/btlupa" 
   		    android:id="@+id/imageButtonProcurar" 
    		android:layout_gravity="center" 
    		android:gravity="center"
    		android:contentDescription="@string/string_descricao_imagem"/>
        
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="fill_parent" 
         android:layout_height="fill_parent"
    	 android:orientation="vertical" 
    	 android:layout_margin="10dp"  
    	 android:layout_marginBottom="-50dp">

	    <ListView 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/listViewImovelAtlzCadastral"/>
   	</LinearLayout> 

</LinearLayout>
